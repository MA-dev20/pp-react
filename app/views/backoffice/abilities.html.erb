  <td onclick="toggleAbility('create_crud', 'user')"><i class="far <%= @user_abilities.create_crud == "user" ? 'fa-check-square' : 'fa-square' %>" id="create_crud_user"></i></td>
  <td onclick="toggleAbility('create_crud', 'none')"><i class="far <%= @user_abilities.create_crud == "none" ? 'fa-check-square' : 'fa-square' %>" id="create_crud_none"></i></td>
</tr>
<tr>
  <td>Edit / Destroy</td>
  <td onclick="toggleAbility('edit_crud', 'company')"><i class="far <%= @user_abilities.edit_crud == "company" ? 'fa-check-square' : 'fa-square' %>" id="edit_crud_company"></i></td>
  <td onclick="toggleAbility('edit_crud', 'department')"><i class="far <%= @user_abilities.edit_crud == "crud" ? 'fa-check-square' : 'fa-square' %>" id="edit_crud_department"></i></td>
