  <td onclick="toggleAbility('share_crud', 'none')"><i class="far <%= @user_abilities.share_crud == "none" ? 'fa-check-square' : 'fa-square' %>" id="share_crud_none"></i></td>
</tr>


if( res.ability.view_crud ) {
