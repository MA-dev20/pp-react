  <td onclick="toggleAbility('edit_crud', 'user')"><i class="far <%= @user_abilities.edit_crud == "user" ? 'fa-check-square' : 'fa-square' %>" id="edit_crud_user"></i></td>
  <td onclick="toggleAbility('edit_crud', 'none')"><i class="far <%= @user_abilities.edit_crud == "none" ? 'fa-check-square' : 'fa-square' %>" id="edit_crud_none"></i></td>
</tr>
<tr>
  <td>Share</td>
  <td onclick="toggleAbility('share_crud', 'company')"><i class="far <%= @user_abilities.share_crud == "company" ? 'fa-check-square' : 'fa-square' %>" id="share_crud_company"></i></td>
