<%= f.hidden_field :view_crud, value: @user_abilities.view_crud %>
<%= f.hidden_field :create_crud, value: @user_abilities.create_crud %>
<%= f.hidden_field :edit_crud, value: @user_abilities.edit_crud %>
<%= f.hidden_field :share_crud, value: @user_abilities.share_crud %>

<tr>
  <td>View</td>
  <td onclick="toggleAbility('view_crud', 'company')"><i class="far <%= @user_abilities.view_crud == "company" ? 'fa-check-square' : 'fa-square' %>" id="view_crud_company"></i></td>
  <td onclick="toggleAbility('view_crud', 'department')"><i class="far <%= @user_abilities.view_crud == "crud" ? 'fa-check-square' : 'fa-square' %>" id="view_crud_department"></i></td>
  <td onclick="toggleAbility('view_crud', 'team')"><i class="far <%= @user_abilities.view_crud == "teams" ? 'fa-check-square' : 'fa-square' %>" id="view_crud_team"></i></td>
  <td onclick="toggleAbility('view_crud', 'user')"><i class="far <%= @user_abilities.view_crud == "user" ? 'fa-check-square' : 'fa-square' %>" id="view_crud_user"></i></td>
  <td onclick="toggleAbility('view_crud', 'none')"><i class="far <%= @user_abilities.view_crud == "none" ? 'fa-check-square' : 'fa-square' %>" id="view_crud_none"></i></td>
</tr>
<tr>
  <td>Create</td>
  <td onclick="toggleAbility('create_crud', 'company')"><i class="far <%= @user_abilities.create_crud == "company" ? 'fa-check-square' : 'fa-square' %>" id="create_crud_company"></i></td>
  <td onclick="toggleAbility('create_crud', 'department')"><i class="far <%= @user_abilities.create_crud == "crud" ? 'fa-check-square' : 'fa-square' %>" id="create_crud_department"></i></td>
