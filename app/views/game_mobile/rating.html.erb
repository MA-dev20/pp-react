<div id="game_channel" data-game-id='<%= @game.id %>'></div>
<div class="head">
	<h1>Kopf hoch!</h1>
	<h3>Die Musik spielt gerade auf dem Hauptbildschirm</h3>
</div>
<div class="middle">
	<div class="icon shake">
		<i class="fas fa-desktop"></i>
	</div>
</div>
<div class="bottom big">
	<% if @admin == @game.user %>
		<%= link_to 'Aufgabe wiederholen', gm_repeat_turn_path, class: 'btn inverted', data: {confirm: "Bist du sicher, dass du die Aufgabe wiederholen mÃ¶chtest?"} %>
		<% if @pitch.task_orders.find_by(order: @game.current_task + 1) %>
			<%= link_to 'weiter', gm_set_slide_path(@game.current_task + 1), class: 'btn custom-btn' %>
		<% else %>
			<% if @game.show_ratings == 'one' || @game.show_ratings == 'all' %>
				<%= link_to 'Zur Bestenliste', gm_set_slide_path(@game.current_task + 1), class: 'btn'%>
			<% end %>
			<%= link_to 'Runde beenden ohne Bestenliste!', gm_set_state_path(state: 'ended'), class: 'btn'%>
		<% end %>
	<% end %>
</div>
