<div class="head">
	<h1>Den letzten Pitch wiederholen</h1>
</div>
<div class="middle">
	<% if @turn.user.avatar? %>
		<%= image_tag @turn.user.avatar.url, class: 'custom-border pulse' %>
	<% else %>
		<div class="circle custom-border pulse"><%= @turn.user.fname[0].capitalize %><%= @turn.user.lname[0].capitalize %></div>
	<% end %>
</div>
<div class="bottom big">
		<%= link_to @turn.user.fname + ' soll wiederholen', gm_repeat_turn_copy_path, class: 'btn inverted' %>
		<%= link_to 'jemand anderes soll wiederholen', gm_set_state_path(state: 'show_task'), class: 'btn'%>
</div>
