<div id="game_channel" data-game-id='<%= @game.id %>'></div>
<div class="head" id="task-head">
	<h1>Die Aufgabe!</h1>
	<h3>Lies dir die Aufgabe aufmerksam durch!</h3>
</div>
<div class="head" id="choose-head" style="display: none">
	
	<h1>Wer soll pitchen?</h1>
	<h3>Tippe auf den Teilnehmer, der <br> als n√§chstes pitchen soll!</h3>
</div>
<div class="middle" id="task-middle">
	<div class="card"><%= @task.title %></div>
</div>
<div class="middle" id="choose-middle" style="display: none">
	<div class="circle-left">
		<% if @turn1.user.avatar? %>
			<%= link_to image_tag(@turn1.user.avatar.url), gm_choosen_path('', turn: @turn1.id), class: 'custom-border', id: "left-img" %>
		<% else %>
			<%= link_to @turn1.user.fname[0].capitalize + @turn1.user.lname[0].capitalize, gm_choosen_path('', turn: @turn1.id), class: 'circle custom-border', id: "left-img" %>
		<% end %>
	</div>
	<div class="circle-right">
		<% if @turn2.user.avatar? %>
			<%= link_to image_tag(@turn2.user.avatar.url), gm_choosen_path('', turn: @turn2.id), class: 'custom-border', id: "left-img" %>
		<% else %>
			<%= link_to @turn2.user.fname[0].capitalize + @turn2.user.lname[0].capitalize, gm_choosen_path('', turn: @turn2.id), class: 'circle custom-border', id: "left-img" %>
		<% end %>
	</div>
</div>
<script>
	setTimeout(function() {
		$('#task-head').fadeOut(500);
		$('#task-middle').fadeOut(500);
		$('#choose-head').show();
		$('#choose-middle').show();
	}, 14500)
</script>