<div id="pitchModal" class="option-modal modal hide">
    <div class="modal-content">
        <!-- <span class="close">&times;</span> -->
        <%= image_tag 'dash/new_icons/close.svg', class: 'close' %>
        <div class="heading">
            <h5>Add a task for interactive presentation.</h5>
        </div>
        <div class="inner-content">
            <div class="row row1">
                <div class="card-heading">
                    <h2>Task</h2>
                    <h2>Import PDF</h2>
                    <h2>Existing Pitch</h2>
                </div>
                <div class="card-content">
                    <div class="modal-card task-div">
                        <%= image_tag 'dash/add_from_existing_pitch.png', class: 'card-img', onclick: "addTaskWithAjax()" %>
                        <label>Task</label>
                    </div>
                    <div class="modal-card import-div">
                        <%= image_tag 'dash/import-PDF.png', class: 'card-img import-PDF' %>
                        <label>Import</label>
                    </div>
                    <div class="modal-card browse-div">
                        <%= image_tag 'dash/add_from_existing_pitch.png', class: 'card-img task-pitch' %>
                        <label>Browse</label>
                    </div>
                </div>
            </div>
            <div class="heading">
                <h5>Add a task for interactive presentation.</h5>
            </div>
            <div class="row row2">
                <div class="card-heading">
                    <h2>Content</h2>
                </div>
                <div class="card-content">
                    <div class="modal-card task-div">
                        <%= image_tag 'dash/image-icon.png', class: 'card-img pdf-image' %>
                        <label>Image</label>
                    </div>
                    <div class="modal-card import-div">
                        <%= image_tag 'dash/video-icon.png', class: 'card-img pdf-video' %>
                        <label>Video</label>
                    </div>
                    <div class="modal-card browse-div">
                        <%= image_tag 'dash/audio.png', class: 'card-img pdf-audio' %>
                        <label>Audio</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>