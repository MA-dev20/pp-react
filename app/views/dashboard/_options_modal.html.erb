<div id="pitchModal" class="option-modal modal hide">
    <div class="modal-content">
        <!-- <span class="close">&times;</span> -->
        <%= image_tag 'dash/new_icons/close.svg', class: 'close' %>
        <div class="heading">
            <h5>FÃ¼ge hier deinem Pitch eine Folie hinzu.</h5>
        </div>
        <div class="inner-content">
            <div class="row row1">
                <div class="card-heading">
                    <h2>Aufgabe</h2>
                    <h2>PDF</h2>
                </div>
                <div class="card-content">
                    <div class="modal-card task-div">
                        <%= image_tag 'dash/add_from_existing_pitch.png', class: 'card-img' %>
                        <% if @pitches.count == 1 && @pitches.first.tasks.count == 0 %>
                          <% if @pitch.tasks.present? %>
                          <label><span onclick="addTaskWithAjax()">Neu</span> / <span onclick="">bestehend</span></label>
                          <% else %>
                          <label><span onclick="addTask()">Neu</span> / <span onclick="">bestehend</span></label>
                          <% end %>
                        <% else %>
                          <% if @pitch.tasks.present? %>
                          <label><span onclick="addTaskWithAjax()">Neu</span> / <span onclick="addTaskfromPitch()">bestehend</span></label>
                          <% else %>
                          <label><span onclick="addTask()">Neu</span> / <span onclick="addTaskfromPitch()">bestehend</span></label>
                          <% end %>
                        <% end %>
                    </div>
                    <div class="modal-card import-div">
                        <%= image_tag 'dash/import-PDF.png', class: 'card-img import-PDF' %>
                        <label><span class="import-PDF">Import</span> / <span class="" onclick="showLibraryModal('pdf')">Bibliothek</span></label>
                    </div>
                </div>
            </div>
            <div class="row row2">
                <div class="card-heading">
                    <h2>Inhalte</h2>
                </div>
                <div class="card-content">
                    <div class="modal-card task-div">
                        <%= image_tag 'dash/image-icon.png', class: 'card-img pdf-image' %>
                        <label>Bild</label>
                    </div>
                    <div class="modal-card import-div">
                        <%= image_tag 'dash/video-icon.png', class: 'card-img pdf-video' %>
                        <label>Video</label>
                    </div>
                    <div class="modal-card browse-div">
                        <%= image_tag 'dash/audio.png', class: 'card-img pdf-audio' %>
                        <label>Audio</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showLibraryModal(type, task_id = '') {
		// $('.option-modal').hide();
		$.ajax({
            url: '<%= show_library_modal_path(@pitch) %>',
            type: 'GET',
            dataType: "script",
            data: {
				type: type,
				task_id: task_id
            },
            success: function (res) {
            }
        })
	}
</script>