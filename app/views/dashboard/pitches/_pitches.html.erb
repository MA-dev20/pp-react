<% content_for :heading do |d| %>
<% if can? :create, Pitch %>
<div class="add-CTA">
  <%= link_to "Pitch erstellen", dashboard_new_pitch_path, class: 'btn' %>
</div>
<div class="CTA-divider">
</div>
<% end %>
<% end %>
<div class="card" id="pitches">
    <div class="pitches" id="pitch-list">
        <% @pitches.each do |pitch| %>
        <div class="card" id="pitch">
          <% if (can? :edit, pitch) || (can? :create, Pitch) %>
            <div class="dropdown-div" onclick="openDropdown(this)">
              <i class="fa fa-ellipsis-v dropdown-icon" aria-hidden="true"></i>
            </div>
            <div class="dropdown-option-wrapper">
              <div class="dropdown-option">
                <% if can? :edit, pitch %>
                  <span class="select-name">
                    <a href="<%=  dashboard_edit_pitch_path(pitch) %>" data-turbolinks="false">
                      <i class="fas fa-pencil-alt"></i>Bearbeiten
                    </a>
                  </span>
                  <span class="select-name">
                    <a href="?share_pitch=<%= pitch.id %>">
                      <i class="fa fa-share-alt" aria-hidden="true"></i>Freigeben
                    </a>
                  </span>
                <% end %>
                <% if can? :create, Pitch %>
                  <span class="select-name">
                    <a href="<%= copy_pitch_path(pitch) %>">
                      <i class="fas fa-copy" aria-hidden="true"></i>Duplizieren
                    </a>
                  </span>
                <% end %>
                <% if can? :destroy, pitch %>
                  <span class="select-name">
                    <a href="<%= delete_unsave_pitch_path(pitch) %>" data-confirm='Willst du die Aufgabe wirklich löschen?'>
                      <%= image_tag 'dash/new_icons/trash.svg', class: 'delete' %><span class="delete-span">Löschen</span>
                    </a>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="thumb">
              <% if pitch.image? %>
              <%= image_tag pitch.image.url, class: 'pitch-placeholder-img' %>
              <% else %>
              <%= image_tag 'dash/pitch_placeholder.png', class: 'pitch-placeholder-img' %>
              <% end %>
            </div>
            <div class="title"><%= pitch.title ? pitch.title : ' - - - ' %></div>
            <div class="autor">
              <% if pitch.user %>
                <% if pitch.user.avatar? %>
                  <%= image_tag pitch.user.avatar.url %><%= pitch.user.fname[0].capitalize + '. ' + pitch.user.lname %>
                <% else %>
                  <i class="fas fa-user"></i><%= pitch.user.fname[0].capitalize + '. ' + pitch.user.lname %>
                <% end %>
              <% else %>
                <i class="fas fa-user"></i>Gelöschter Nutzer
              <% end %>
            </div>

            <div class="subtitle">
                Folien: <%= pitch.tasks.where(task_type: 'slide').size + pitch.tasks.where.not(task_type: 'slide').size + pitch.tasks.where(task_type: nil).size%>,
                Aufgaben: <%= pitch.tasks.where.not(task_type: 'slide').size + pitch.tasks.where(task_type: nil).size %>
            </div>
            <%= link_to '', dashboard_pitches_path('', pitch_id: pitch.id), class: 'pitch-now' %>
        </div>
        <% end %>
    </div>
</div>
