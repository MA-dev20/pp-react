<div id="game_channel" data-game-id='<%= @game.id %>'></div>
<% if @video %>
<div class="video-bg">
	<%= video_tag @video.video.url, id: 'video-blur', autoplay: false, controls: false, muted: true %>
	<%= video_tag @video.video.url, id: 'video', autoplay: false, controls: false, onended: 'redirect()' %>	
</div>
<script>
document.getElementById('video-blur').play();
document.getElementById('video').volume = 0.5;
document.getElementById('video').play();
</script>
<% elsif @pitch[:video_url] != '' && @pitch[:video_url].start_with?('https://vimeo.com') %>
<div class="video-bg" style="position: absolute; height: 100%; width: 100%; background-color: black;">
<iframe src="https://player.vimeo.com/video/<%= @pitch[:video_url].split('https://vimeo.com/')[1].split('/')[0] %>?autoplay=1" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe><script src="https://player.vimeo.com/api/player.js"></script>
</div>
<% elsif @pitch[:video_url] != '' && @pitch[:video_url].include?('youtube') %>
<div id="player" class="youtube-player"></div>
<script src="http://www.youtube.com/player_api"></script>
<script>
	var video_url = '<%= @pitch[:video_url] %>';
    var video_id = video_url.split('v=')[1];
    var ampersandPosition = video_id.indexOf('&');
    if (ampersandPosition != -1) {
        video_id = video_id.substring(0, ampersandPosition);
    }
    // create youtube player
    var player;
    function onYouTubePlayerAPIReady() {
        player = new YT.Player('player', {
            height: '350',
            width: '100%',
            videoId: video_id,
            events: {
                'onReady': onPlayerReady,
                'onStateChange': onPlayerStateChange,
                'onError': function (errEvent) {
                    var errCode = errEvent.data;
                    if (errCode == 100) {
                        alert('Video Not Found');
                    }
                }
            }
        });
    }
	// autoplay video
    function onPlayerReady(event) {
        event.target.playVideo();
    }

    // when video ends
    function onPlayerStateChange(event) {
        if (event.data === 0) {
			redirect();
        }
    }
	$(function () {

        // bind events to the arrow keys
        $(document).keydown(function (e) {
            switch (e.which) {
                case 32:
                    redirect();
                    break;
                default: return;
            }
            e.preventDefault(); // prevent the default action (scroll / move caret)
        });
    });
</script>
<% else %>
<%= video_tag 'gameintro.mp4', id: 'video-bg', autoplay: false, controls: false, onended: 'redirect()' %>
<section id="skip">
   Skip mit Leertaste
</section>
<script>
	document.getElementById('video-bg').volume = 0.5;
    document.getElementById('video-bg').play();
</script>
<% end %>
<script>
	$('#navbar').hide();
	$('#background-images').hide();
	function redirect() {
		window.location.replace('<%= gd_set_state_path('', state: 'choose') %>');
	}
    $(window).keypress(function (e) {
        if (e.key === ' ' || e.key === 'Spacebar') {
            window.location.replace('<%= gd_set_state_path('', state: 'choose') %>');
        };
  	}) 
</script>