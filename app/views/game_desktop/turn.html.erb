<div id="game_channel" data-game-id='<%= @game.id %>'></div>
<section id="task">
	<div class="turn">
		<h3 id="head"><%= @turn.user.fname %> mache dich bereit!</h3>
		<% if @turn.user.avatar? %>
		<%= image_tag @turn.user.avatar.url, class: 'mid-img pulse' %>
		<% else %>
		<div class="circle">
			<%= @turn.user.fname[0].capitalize + @turn.user.lname[0].capitalize %>
		</div>
		<% end %>
		<div class="time">
			<i class="fas fa-stopwatch"></i>
			<%= @task.time / 60 %>:<%= (@task.time % 60) < 10 ? "0" + (@task.time % 60) : (@task.time % 60) %>
		</div>
	</div>
	<div class="task left">
		<h3>Deine Aufgabe</h3>
		<div class="task-card">
			<div class="card">
				<%= @task.title %>
			</div>
			<div class="ratings">
				<% if @task.rating1 %>
				<div class="rating">
					<%= @task.rating1 %>
					<%= inline_svg_tag 'dash/icons/star.svg' %>
				</div>
				<% end %>
				<% if @task.rating2 %>
				<div class="rating">
					<%= @task.rating2 %>
					<%= inline_svg_tag 'dash/icons/criteria2.svg' %>
				</div>
				<% end %>
				<% if @task.rating3 %>
				<div class="rating">
					<%= @task.rating3 %>
					<%= inline_svg_tag 'dash/icons/criteria3.svg' %>
				</div>
				<% end %>
				<% if @task.rating4 %>
				<div class="rating">
					<%= @task.rating4 %>
					<%= inline_svg_tag 'dash/icons/criteria4.svg' %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</section>
<section id="skip">
	Skip mit Leertaste
</section>
<% if @game.game_sound %>
<%= audio_tag 'game/turn/dubistdran.mp3', id: 'theme', autoplay: true, loop: true %>
<script>
	document.getElementById('theme').volume = 0.2;
</script>
<% end %>
<script>
	$(window).keypress(function (e) {
      if (e.key === ' ' || e.key === 'Spacebar') {
          window.location.replace('<%= gd_set_state_path('', state: 'play') %>');
      };
  })
</script>
