            startDelay: 300,
            typeSpeed: 100,
            backSpeed: 20,
            backDelay: 700,
            loop: true,
            loopCount: Infinity,
        })

        WOW.prototype.addBox = function(element) {
            this.boxes.push(element);
        };

        // Init WOW.js and get instance
        var wow = new WOW();
        wow.init();

        $('.wow.add-anim').on('scrollSpy:exit', function() {
            $(this).css({
