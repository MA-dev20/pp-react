		$('#vidVideo').on('ended', function() {
			$('#picVideo').show();
			$('#vidVideo').hide();
			$('#playVideo').show();
		})
		$('#vidVideo').on('pause', function() {
			$('#picVideo').show();
			$('#vidVideo').hide();
			$('#playVideo').show();
		})
    }
    function showLoginModal() {
