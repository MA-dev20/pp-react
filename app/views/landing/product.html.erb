<div class="fullscreen-modal" id="loginModal">
    
    <div class="close"><i class="fas fa-times" onclick="showLoginModal()"></i></div>
    <div class="card">
    <%= form_for(:user, as: User, url: session_path(User)) do |f| %>
        <h2>Login</h2>
        <div class="form-group ">
            <label for="">Email</label>
            <%= f.email_field :email, class: 'form-field', id: 'loginEmail', required: true  %>
        </div>
        <div class="form-group">
            <label for="">Passwort</label>
            <div class="right"><%= link_to "Passwort vergessen?", forget_password_path %></div>
            <%= f.password_field :password, class: 'form-field',id: 'loginPassword', required: true  %>
            <br>
        </div>
        <div class="form-group center">
            <%= f.submit 'Login', class: 'btn btn-green', id: "loginButton" %>
        </div>
    <% end %>
    </div>
</div>
<script>
	function showPar(eID) {
		$('#headlines .active').removeClass('active');
		$('#headlines ' + eID).addClass('active');
		$('section.active').addClass('fadeOutPar');
		$('section.active').removeClass('fadeIn wow');
		setTimeout(function(){
			$('section.active').removeClass('active');
			$('section' + eID).addClass('active');
			$('section' + eID).addClass('fadeInPar');
			$('.fadeOutPar').removeClass('fadeOutPar');
		},500);
		setTimeout(function(){
			$('.fadeInPar').removeClass('fadeInPar');
		},1500);
	}
	var wow = new WOW();
	wow.init();
	function showLoginModal() {
        $('#loginModal').toggle();
    }
	function showNavLinks() {
        if($('#navLinks').is(":hidden")) {
            $('#navLinks').show();   
        } else {
            $('#navLinks').hide();
        }
    }
</script>